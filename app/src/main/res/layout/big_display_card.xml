<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/HC3SideView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/remindLaterLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/rounded_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_bell" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/remind_later" />

            </LinearLayout>

            <LinearLayout

                android:id="@+id/dismissLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/rounded_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_dismiss" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/dismiss_now" />

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/actionRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clipChildren="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/HC3Image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="false" />

            <TextView
                android:id="@+id/HC3Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="16dp"
                android:fontFamily="sans-serif-medium"
                android:lineHeight="35sp"
                android:text="@string/title"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/HC3Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/HC3Title"
                android:layout_margin="16dp"
                android:fontFamily="sans-serif"
                android:lineHeight="18sp"
                android:text="@string/description"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/HC3ActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/HC3Description"
                android:layout_margin="16dp"
                android:padding="10dp"
                android:text="@string/action"
                android:textAllCaps="false"
                app:cornerRadius="10dp" />

        </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>