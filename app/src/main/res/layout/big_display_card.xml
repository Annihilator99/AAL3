<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/HC3RL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/HC3Image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/bigDisplayCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:autoSizeTextType="uniform"
            android:text="Title"
            android:textFontWeight="5"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/bigDisplayCardDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bigDisplayCardTitle"
            android:layout_margin="16dp"
            android:autoSizeTextType="uniform"
            android:text="Description"
            android:textFontWeight="2"
            android:textSize="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bigDisplayCardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bigDisplayCardDescription"
            android:layout_margin="16dp"
            android:padding="10dp"
            android:text="action"
            app:cornerRadius="10dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>